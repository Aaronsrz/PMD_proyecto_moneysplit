<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/bg_expense_item"
        android:descendantFocusability="afterDescendants">

        <!-- Emoji / icon -->
        <TextView
            android:id="@+id/txtExpenseEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸ’¶"
            android:textSize="28sp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <!-- Title + Paid by -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExpenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game bar"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtExpenseSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid by Baptiste"
                android:textSize="12sp"
                android:textColor="#AAAAAA" />
        </LinearLayout>

        <!-- Share button -->
        <ImageButton
            android:id="@+id/btnShareExpense"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share expense"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <!-- Amount -->
        <TextView
            android:id="@+id/txtExpenseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬ 25.00"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>