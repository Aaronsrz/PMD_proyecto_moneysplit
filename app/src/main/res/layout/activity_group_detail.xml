<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Top bar: back + group title (small) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_left"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Back"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Flag + group title (big) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/txtGroupEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡ªðŸ‡¸"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtGroupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Madrid in French (+ Filip)"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Totals row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/layoutMyExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Expenses"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/txtMyExpensesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬ 36.07"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTotalExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expenses"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/txtTotalExpensesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬ 213.95"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section title -->
    <TextView
        android:id="@+id/txtSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- List of expenses -->
    <ListView
        android:id="@+id/listViewExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingTop="8dp" />

    <!-- Add Expense button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_button"
            android:text="+"
            android:textSize="26sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Add Expense"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
